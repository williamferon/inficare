
<div class="container">
  <h1 class="text-center mb-4">New Infi</h1>

  <div class="row justify-content-center">
    <div class="col-sm-8 my-3">
      <%= form_for @infi, class: "d-flex flex-column" do |f| %>
        <div class="form-group">
          <%= f.label :num, "Numéro" %>
          <%= f.text_field :num, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :nom, "Nom" %>
          <%= f.text_field :nom, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :region, "Région" %>
          <%= f.text_field :region, class: "form-control" %>
        </div>
        <%= f.submit "Créer l'Infi", class: "btn btn-primary mt-2 align-self-end" %>
      <% end %>
    </div>
  </div>
</div>
