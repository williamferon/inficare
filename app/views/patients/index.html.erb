<h1> Listing patients </h1>

<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: patients_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type nom, prenom or niss"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Prenom</th>
      <th>Téléphone</th>
      <th>Rue</th>
      <th>Numéro</th>
      <th>Ville</th>
      <th>niss</th>
      <th>Contact</th>
      <th>Lien</th>
      <th>Téléphone du contact</th>
    </tr>
  </thead>
  <tbody>
      <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.nom %></td>
        <td><%= patient.prenom %></td>
        <td><%= patient.telephone%></td>
        <td><%= patient.rue%></td>
        <td><%= patient.numero%></td>
         <td><%= patient.ville%></td>
        <td><%= patient.niss%></td>
        <td><%= patient.contact%></td>
         <td><%= patient.lien%></td>
         <td><%= patient.tel_contact%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<button><%= link_to 'Nouveau patient', new_patient_path %></button>
